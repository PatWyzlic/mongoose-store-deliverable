<!-- we're serving block content in layout.liquid -->
<!-- so we need to inform all our blocks(files) -->
{% layout 'layout.liquid'%}
<!-- here we start our block content -->
{% block content %}
    <div >
        <h2 class="display-6">All Products</h2>
        <div class="row">
            {% for product in products %}
                <div class="card" style="width: 18rem;">
                    <!-- card header -> name of product -->
                    <!-- card body -> ready to eat as title, color as text-->
                    <h5 class="card-header">{{product.name}}</h5>
                    <div class="card-body">
                        <h5 class="card-title">
                            {% if product.readyToEat %}
                                Ripe
                            {% else %}
                                Not Ripe
                            {% endif %}
                        </h5>
                        <p class="card-text"> 
                            The color of this {{product.name}} is {{ product.color }}
                        </p>
                        <a href="/products/{{ product.id }}" class="btn btn-info">
                            View {{ product.name }}
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}