{% layout 'layout.liquid' %}
{% block content %}
    <div class="container-md">
        <!-- you can do fun things like inline style with properties of your rendered object -->
        <!-- <article style="background-color:{{product.color}}"> -->
        <article>
            <h2>
                {{ product.name }}
            </h2>
            <h3>{{ product.description }}</h3>
            <img src="{{product.img}}" style="width: 200px; height: 180px" />
                    <form action="/products/{{ product.id }}?_method=DELETE" method="POST">
                        <input type="submit" value="Delete" class="btn btn-danger">
                    </form>
                    {% if product.qty < 1%}
                        <h3>Out of stock</h3>
                        <a href="/products" class="btn btn-success">Back</a>
                        {% else %}
                        <form action="/products/{{ product.id }}/buy?_method=PUT" method="POST">
                            <input type="submit" value="Buy" class="btn btn-success">
                        </form>
                        <a href="/products" class="btn btn-success">Back</a>
                        <a href="/products/{{ product.id }}/edit" class="btn btn-success">Edit</a>
                        {% endif %}

                <h3>Price: {{ product.price }}</h3>
                <h3>Only {{ product.qty }} left!</h3>
        </article>
    </div>
{% endblock %}